<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="${relativePackage}.${activityClass}" >

  <TextView
        android:id="@+id/pwchangeform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#028ad9"
        android:text="@string/pwchange"
        
        android:textSize="20dp"
        android:gravity="center"/>
   
      <EditText
        android:id="@+id/noweditPwd"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="#dff2f7" 
        android:layout_below="@+id/pwchangeform"
        android:hint="현재비밀번호를 입력하세요"
        android:paddingLeft="5dp" 
        android:password="true"
        android:textSize="14dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:imeOptions="actionNext" />
    <EditText
        android:id="@+id/editPwd1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="#dff2f7" 
        android:layout_below="@+id/noweditPwd"
   
        android:layout_marginLeft="80dp"  
        android:hint="새비밀번호를 입력하세요."
        android:password="true"
        android:paddingLeft="5dp" 
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:imeOptions="actionNext" />
     <EditText
        android:id="@+id/editPwd2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="#dff2f7" 
        android:password="true"
        android:hint="새비밀번호를 다시 입력하세요."
        android:paddingLeft="5dp" 
        android:layout_below="@+id/editPwd1"
        android:textSize="14dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:imeOptions="actionNext" />

     <Button
         android:id="@+id/pwchangeBtn"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/editPwd2"
         android:layout_below="@+id/editPwd2"
         android:layout_marginTop="22dp"
         android:text="완료" />

     

</RelativeLayout>